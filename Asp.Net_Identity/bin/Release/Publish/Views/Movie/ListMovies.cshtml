
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table id="Customer" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
            <th>In Stock</th>           
        </tr>
    </thead>
    <tbody></tbody>

</table>

@section scripts{
    <script>

        $(document).ready(
            function () {
                $("#Customer").DataTable({
                    ajax: {
                        url: "/api/Movie/",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",                           
                        },
                        { data: "genre.name" },
                        { data: "noInStock" },                        
                    ]
                });
            }
        );

    </script>
}



