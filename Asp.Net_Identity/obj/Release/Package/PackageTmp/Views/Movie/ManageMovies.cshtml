
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table id="Customer" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
            <th>In Stock</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>

</table>

@section scripts{
    <script>

        $(document).ready(
            function () {
                $("#Customer").DataTable({
                    ajax: {
                        url: "/api/Movie/",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data, type, movie) {
                                return "<a href='#' class='btn btn-link'>" + movie.name + "</a>"
                            }
                        },
                        { data: "genre.name" },
                        { data: "noInStock" },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='btn btn-link' data-movie-id=" + data + "> Delete" + "</button>"  
                            }
                        }
                    ]
                });
            }
        );

    </script>
}



